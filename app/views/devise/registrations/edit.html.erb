<div class="row">
  <div class="col-md-3">
    <ul class="sidebar-list">
      <li class="sidebar-item"><%= link_to "Edit Profile", edit_user_registration_path, class: "sidebar-link active" %></li>
    </ul>
    <br>
    <%= link_to "View My Profile", user_path(current_user.id), class: "btn btn-default wide" %>
  </div>

  <div class="col-md-9 text-center">
    <div class="panel panel-default">
      <div class="panel-heading">Your Profile</div>
      <div class="panel-body">
        <div class="container">

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
            <%= render 'shared/devisemes' %>

            <div class="form-group">
              First Name:<%= f.text_field :first_name, autofocus: true, :placeholder => "First Name", :class => 'form-control' %>
            </div>

            <div class="form-group">
              Last Name:<%= f.text_field :last_name, autofocus: true, :placeholder => "Last Name", :class => 'form-control' %>
            </div>

            <div class="form-group">
              Email:<%= f.email_field :email, :placeholder => "Email (Leave blank unless if you want to change your current email address)", :class => 'form-control' %>
            </div>

            <div class="form-group">
              Phone Number:<%= f.text_field :phone_number, :placeholder => "Phone Number", :class => 'form-control' %>
            </div>

             <div class="form-group">
              City:<%= f.text_field :city, :placeholder => "City", :class => 'form-control' %>
            </div>

             <div class="form-group">
              State:<%= f.text_field :state, :placeholder => "State", :class => 'form-control' %>
            </div>

             <div class="form-group">
              Country:<%= f.text_field :country, :placeholder => "Country", :class => 'form-control' %>
            </div>

             <div class="form-group">
              Birthdate:<%= f.text_field :birthdate, :placeholder => "DD/MM/YYYY", :class => 'form-control' %>
            </div>

             <div class="form-group">
              Occupation:<%= f.text_field :occupation, :placeholder => "Occupation", :class => 'form-control' %>
            </div>

            Description:<div class="form-group">
              <%= f.text_area :description, rows: 5, cols: 25,  :placeholder => "Tell us more about yourself:
              - Experience
              - Skills
              - Why you want to be a volunteer", :class => 'form-control' %>
            </div>

            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
            <% end %>

            <div class="form-group">
              New Password:<%= f.password_field :password, autocomplete: "off", :placeholder => "New Password (leave blank if you don't want to change current password)", :class => 'form-control' %>
            </div>

            <div class="form-group">
              Confirm Password:<%= f.password_field :password_confirmation, autocomplete: "off", :placeholder => "Confirm Password (leave blank if you don't want to change current password)", :class => 'form-control' %>
            </div>

            <div class="actions">
              <%= f.submit "Save", :class => "btn btn-primary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>

  </div>
</div>